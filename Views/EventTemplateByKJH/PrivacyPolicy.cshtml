		img { border: 0; }

		.contents { font-family: 'Malgun Gothic','Dotum'; font-size: 12px; line-height: 18px; color: #5e5e5e; padding: 10px; overflow: auto;}
		.contents span{font-weight:bold;}

		/*.contents dl { padding: 20px; }
